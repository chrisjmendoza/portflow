<Window x:Class="PortFlow.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PortFlow" Height="400" Width="700">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
            <Button Name="RunButton" Width="140" Height="34" Click="RunButton_Click">Run (Manual)</Button>
            <CheckBox Name="AutoRunCheck" IsChecked="True" Margin="10,0" VerticalAlignment="Center">Auto-run on USB insert</CheckBox>
            <TextBlock Name="UsbStatusText" VerticalAlignment="Center">USB: (none)</TextBlock>
        </StackPanel>

        <TextBox Name="OutputBox" Grid.Row="1" FontFamily="Consolas"
                 VerticalScrollBarVisibility="Auto" IsReadOnly="True" TextWrapping="NoWrap"/>
    </Grid>
</Window>